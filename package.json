{
  "name": "peabody-local-service",
  "version": "1.0.122",
  "description": "Local service for AI Dev Kit",
  "main": "index.js",
  "config": {
    "imageName": "iotccrscotts.azurecr.io/peabody-local-service"
  },
  "scripts": {
    "test": "node ./node_modules/jest/bin/jest.js",
    "tslint": "node ./node_modules/tslint/bin/tslint -p ./tsconfig.json",
    "build": "node ./node_modules/typescript/bin/tsc -p .",
    "docker_build": "node ./scripts/docker_build.js --docker-build",
    "preversion": "npm test",
    "version": "node ./scripts/docker_build.js --docker-build",
    "postversion": "node ./scripts/docker_build.js --docker-push"
  },
  "author": "sseiber",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:sseiber/peabody-local-service.git"
  },
  "dependencies": {
    "@hapi/boom": "^7.4.2",
    "@hapi/good": "^8.2.0",
    "@hapi/good-console": "^8.1.0",
    "@hapi/good-squeeze": "^5.2.0",
    "@hapi/hapi": "^18.1.0",
    "@hapi/inert": "^5.2.0",
    "@hapi/nes": "^11.1.0",
    "azure-iot-device": "^1.9.4",
    "azure-iot-device-mqtt": "^1.9.4",
    "compare-versions": "^3.4.0",
    "cookie": "^0.3.1",
    "fs-extra": "^7.0.1",
    "ip": "^1.1.5",
    "jsonfile": "^5.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.defaults": "^4.2.0",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "nconf": "^0.10.0",
    "netmask": "^1.0.6",
    "pjson": "^1.0.9",
    "query-string": "^6.4.2",
    "request": "^2.88.0",
    "spryly": "^1.0.16",
    "uuid": "^3.3.2",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/bell": "^9.3.2",
    "@types/hapi": "^18.0.1",
    "@types/inert": "^5.1.2",
    "@types/jest": "^24.0.11",
    "@types/nconf": "0.10.0",
    "@types/nes": "^7.0.6",
    "@types/node": "^11.12.2",
    "@types/request": "^2.48.1",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.1",
    "tslint": "^5.14.0",
    "typescript": "^3.4.1"
  },
  "jest": {
    "rootDir": "./src/",
    "transform": {
      ".(ts|tsx)": "<rootDir>/../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
